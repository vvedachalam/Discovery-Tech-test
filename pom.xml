    <repository>
        <id>sonatype-ossrh</id>
        <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </repository>
    </repositories>
    <properties>
        <spring.version>4.3.7.RELEASE</spring.version>
        <cucumber.version>1.2.5</cucumber.version>
        <junit.version>4.13.1</junit.version>
